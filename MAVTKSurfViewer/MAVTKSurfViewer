class ExportMARDialog(QtGui.QDialog): #{

  def __init__(self, parent = None): #{
    super(ExportMARDialog, self).__init__(parent)
    self._buttons = None
    self._le_page_title = None
    self._te_page_info = None
    accepted = QtCore.pyqtSignal()
    self.initUI()
  #}

  ###
  # \function   initUI
